<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_item_mass_icon"
            android:layout_width="wrap_content"
            android:src="@drawable/subway_1"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_mass_category"
            android:layout_width="wrap_content"
            android:text="坐火车"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_item_mass_icon"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_mass_time"
            android:layout_width="wrap_content"
            android:text="约2天3小时"
            android:textSize="14sp"
            android:layout_below="@id/tv_item_mass_category"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_fragment_mass_item_prive"
            android:layout_width="wrap_content"
            android:text="¥230元"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue"
            android:layout_toRightOf="@id/tv_item_mass_time"
            android:layout_below="@id/tv_item_mass_category"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/split_line"
        android:layout_height="1dp"/>

</LinearLayout>