<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_view"
    android:layout_width="match_parent"
    android:background="@drawable/background_selector"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp">

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:clickable="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/location_itme" />

    <TextView
        android:id="@+id/tv_item_top"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_item_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="我要你给我爱我最深"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_bottom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_item_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="深圳 -- 广州 新生村-逗比路1号-建设光"
        android:textColor="@color/grave"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_item_route"
        android:layout_width="35dp"
        android:clickable="false"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/left_top_arrow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@id/tv_item_top"
        android:layout_below="@id/tv_item_bottom"
        android:layout_marginTop="12dp"
        android:background="@color/split_line" />
</RelativeLayout>