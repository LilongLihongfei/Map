<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/background_selector"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/location_itme"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/tv_item_top"
            android:layout_toRightOf="@id/iv_item_icon"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:text="我要你给我爱我最深"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_item_bottom"
            android:layout_toRightOf="@id/iv_item_icon"
            android:layout_below="@id/tv_item_top"
            android:layout_width="200dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="20dp"
            android:textColor="@color/grave"
            android:layout_marginTop="2dp"
            android:text="深圳 -- 广州 新生村-逗比路1号-建设光"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_item_route"
            android:layout_width="20dp"
            android:src="@drawable/route_rec"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/iv_item_route"
            android:layout_alignLeft="@id/iv_item_route"
            android:layout_marginTop="3dp"
            android:text="到这去"
            android:layout_marginLeft="-12dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="@color/split_line"
            android:layout_alignLeft="@id/tv_item_top"
            android:layout_below="@id/tv_item_bottom"
            android:layout_marginTop="12dp"
            android:layout_height="1dp"/>
    </RelativeLayout>
</LinearLayout>